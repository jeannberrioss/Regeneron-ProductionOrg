<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Add_a_Closed_Reason_When_Closed</fullName>
    <active>true</active>
    <errorConditionFormula>ISBLANK(TEXT(Closed_Reason__c)) &amp;&amp;ISPICKVAL( Internal_Status__c , &quot;Closed&quot;)</errorConditionFormula>
    <errorDisplayField>Closed_Reason__c</errorDisplayField>
    <errorMessage>Select a Closed Reason</errorMessage>
</ValidationRule>
