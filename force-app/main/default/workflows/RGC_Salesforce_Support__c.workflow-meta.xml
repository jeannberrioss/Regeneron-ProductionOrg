<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>New_RGC_Salesforce_Request</fullName>
        <ccEmails>jgreco@ciberspring.com</ccEmails>
        <ccEmails>SalesforceSupport@ciberspring.com</ccEmails>
        <description>New RGC Salesforce Request</description>
        <protected>false</protected>
        <recipients>
            <recipient>Internal_Support_Team</recipient>
            <type>group</type>
        </recipients>
        <recipients>
            <recipient>jason.mighty@regeneron.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>RGC_Support_Request/New_RGC_Salesforce_Request</template>
    </alerts>
    <alerts>
        <fullName>RGC_Salesforce_Request_Updated_Assigned_Request</fullName>
        <ccEmails>jgreco@ciberspring.com</ccEmails>
        <ccEmails>SalesforceSupport@ciberspring.com</ccEmails>
        <description>RGC Salesforce Request Updated - Assigned Request</description>
        <protected>false</protected>
        <recipients>
            <field>Assigned_To__c</field>
            <type>userLookup</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>RGC_Support_Request/RGC_Salesforce_Request_Updated_Assigned_Request</template>
    </alerts>
    <alerts>
        <fullName>RGC_Salesforce_Request_Updated_Unassigned_Request</fullName>
        <ccEmails>jgreco@ciberspring.com</ccEmails>
        <ccEmails>SalesforceSupport@ciberspring.com</ccEmails>
        <description>RGC Salesforce Request Updated - Unassigned Request</description>
        <protected>false</protected>
        <recipients>
            <recipient>Internal_Support_Team</recipient>
            <type>group</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>RGC_Support_Request/RGC_Salesforce_Request_Updated_Unassigned_Request</template>
    </alerts>
    <alerts>
        <fullName>RGC_Support_Request_Assigned</fullName>
        <ccEmails>jgreco@ciberspring.com</ccEmails>
        <ccEmails>SalesforceSupport@ciberspring.com</ccEmails>
        <description>RGC Support Request Assigned</description>
        <protected>false</protected>
        <recipients>
            <recipient>jason.mighty@regeneron.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <field>Assigned_To__c</field>
            <type>userLookup</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>RGC_Support_Request/RGC_Salesforce_Request_Assigned</template>
    </alerts>
    <alerts>
        <fullName>RGC_Support_Request_Closed</fullName>
        <ccEmails>jgreco@ciberspring.com</ccEmails>
        <ccEmails>SalesforceSupport@ciberspring.com</ccEmails>
        <description>RGC Support Request Closed</description>
        <protected>false</protected>
        <recipients>
            <type>creator</type>
        </recipients>
        <recipients>
            <recipient>jason.mighty@regeneron.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <field>Created_on_Behalf_Of__c</field>
            <type>userLookup</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>RGC_Support_Request/RGC_Support_Request_Closed</template>
    </alerts>
    <alerts>
        <fullName>RGC_Support_Request_Received</fullName>
        <ccEmails>jgreco@ciberspring.com</ccEmails>
        <ccEmails>SalesforceSupport@ciberspring.com</ccEmails>
        <description>RGC Support Request Received</description>
        <protected>false</protected>
        <recipients>
            <type>creator</type>
        </recipients>
        <recipients>
            <recipient>jason.mighty@regeneron.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <field>Created_on_Behalf_Of__c</field>
            <type>userLookup</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>RGC_Support_Request/RGC_Support_Request_Received</template>
    </alerts>
    <rules>
        <fullName>RGC Support Request Closed- Alert</fullName>
        <actions>
            <name>RGC_Support_Request_Closed</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>RGC_Salesforce_Support__c.Internal_Status__c</field>
            <operation>equals</operation>
            <value>Closed</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>RGC Support Request Created- Alert</fullName>
        <actions>
            <name>New_RGC_Salesforce_Request</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>RGC_Support_Request_Received</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>RGC_Salesforce_Support__c.CreatedById</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>RGC Support Ticket Assigned</fullName>
        <actions>
            <name>RGC_Support_Request_Assigned</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <formula>OR(      ISCHANGED (Assigned_To__c),       AND (ISNEW(),NOT( ISBLANK( Assigned_To__c ) )))</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
